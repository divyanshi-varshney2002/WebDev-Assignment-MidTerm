<% layout('layouts/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products/<%=product._id%>?_method=PATCH" method="POST">
            <h1>Edit Article</h1>
            <div class="mb-3">
                <label class="form-label" for="name">Name : </label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Product Name" value="<%=product.name%>">
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc" rows="5"><%=product.desc%> </textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="mark">Markdown</label>
                <textarea class="form-control" name="mark" id="mark" rows="2"><%=product.mark%></textarea>
            </div>
            <button type="" class="btn btn-sm" style="background-color: gray;">Cancel</button>
            <button type="submit" class="btn btn-sm btn-success">Edit</button>
        </form>
    </div>
</div>