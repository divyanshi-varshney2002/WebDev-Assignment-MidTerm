<% layout('layouts/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products" method="POST">
            <h1>NEW ARTICLE</h1>
            <div class="mb-3">
                <label class="form-label" for="name">Title</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="">
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc" rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="mark">Markdown</label>
                <textarea class="form-control" name="mark" id="mark" rows="2"></textarea>
            </div>
            <button type="" class="btn btn-sm" style="background-color: gray;">Cancel</button>
            <button type="submit" class="btn btn-sm btn-success">Save</button>
        </form>
    </div>
</div>